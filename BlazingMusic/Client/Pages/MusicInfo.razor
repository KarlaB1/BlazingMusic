@using BlazingMusic.Shared.Models

<h3>@HeaderText</h3>
<hr />
<div style="width:60%;">

    <EditForm Model="Music" OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator />
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Título</label>
            <div class="col-sm-10">
                <InputText type="text" class="form-control" @bind-Value="@Music.Name" disabled="@ReadOnlyMode" />
                <ValidationMessage For="@(() => Music.Name)" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Artista</label>
            <div class="col-sm-10">
                <InputText type="text" class="form-control" @bind-Value="@Music.Artist" disabled="@ReadOnlyMode" />
                <ValidationMessage For="@(() => Music.Artist)" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Duración</label>
            <div class="col-sm-10">
                <InputNumber class="form-control" step="0.01" @bind-Value="@Music.Duration" disabled="@ReadOnlyMode" />
                <ValidationMessage For="@(() => Music.Duration)" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Fecha de Lanzamiento</label>
            <div class="col-sm-10">
                <InputDate class="form-control" @bind-Value="@Music.LaunchDate" disabled="@ReadOnlyMode" />
                <ValidationMessage For="@(() => Music.LaunchDate)" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Discográfica</label>
            <div class="col-sm-10">
                <InputText type="text" class="form-control" @bind-Value="@Music.RecordLabel" disabled="@ReadOnlyMode" />
                <ValidationMessage For="@(() => Music.RecordLabel)" />
            </div>
        </div>
        <a class="btn btn-danger" tabindex="-1" role="button" aria-disabled="true" href="/">Regresar</a>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

        @if (!ReadOnlyMode)
        {
            <button type="submit" class="btn btn-primary">@((MusicId > 0) ? "Actualizar" : "Guardar")</button>
        }
    </EditForm>
</div>

@code {
    [Parameter] public int MusicId { get; set; }
    [Parameter] public string HeaderText { get; set; }
    [Parameter] public Music Music { get; set; }
    [Parameter] public bool ReadOnlyMode { get; set; }

    [Parameter] public EventCallback OnValidSubmit { get; set; }

    // Your initialization code here, if needed.
}
